
<h1>General Shopping List</h1>
<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Food</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @shopping_list_items.each do |item| %>
      <tr>
        <td><%= item.recipe.name %></td>
        <td><%= item.food.name %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.food.unit_price %></td>
        <td>$<%= item.quantity * item.food.unit_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>Total Price: $<%= @total_price %></p>
